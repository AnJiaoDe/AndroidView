<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_rounded_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <com.cy.androidview.roundview.ImageViewRound
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hg"
            app:cy_radiusCorner="10dp" />

        <com.cy.androidview.roundview.RelativeLayoutRound
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:cy_radiusCorner="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hg" />
        </com.cy.androidview.roundview.RelativeLayoutRound>

        <com.cy.androidview.roundview.LinearLayoutRound
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#eee"
            android:orientation="vertical"
            app:cy_radiusCorner="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="视频"
                android:textSize="14sp" />
        </com.cy.androidview.roundview.LinearLayoutRound>

        <com.cy.androidview.roundview.LinearLayoutRound
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#eee"
            android:orientation="vertical"
            app:cy_round_as_circle="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="视频"
                android:textSize="14sp" />
        </com.cy.androidview.roundview.LinearLayoutRound>
        <com.cy.androidview.roundview.FrameLayoutRound
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="#ff0"
            app:cy_heightWidthRatio="1.6"
            app:cy_radiusCorner="10dp">
            <RelativeLayout
                android:id="@+id/layout_ad"
                android:layout_width="match_parent"
                android:background="#00f"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="视频"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>


        </com.cy.androidview.roundview.FrameLayoutRound>

        <com.cy.androidview.roundview.ImageViewRound
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hg"
            app:cy_round_as_circle="true" />

        <com.cy.androidview.roundview.ImageViewRound
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hg"
            app:cy_heightWidthRatio="0.6"
            app:cy_radiusCorner="10dp" />

        <com.cy.androidview.roundview.ImageViewRound
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hg"
            app:cy_heightWidthRatio="1.3"
            app:cy_radiusCorner="10dp" />
    </LinearLayout>
</ScrollView>
