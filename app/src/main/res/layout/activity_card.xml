<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <com.cy.androidview.cardview.FrameLayoutCard
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:cy_heightWidthRatio="1"
            app:cy_cardCornerRadius="10dp"
            app:cy_cardElevation="20dp"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="FrameLayoutCard cy_cardElevation=20dp"
                android:textSize="16sp" />
        </com.cy.androidview.cardview.FrameLayoutCard>
        <com.cy.androidview.cardview.LinearLayoutCard
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:cy_cardCornerRadius="4dp"
           >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="LinearLayoutCard"
                android:textSize="16sp" />
        </com.cy.androidview.cardview.LinearLayoutCard>
        <com.cy.androidview.cardview.ButtonCard
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:cy_heightWidthRatio="1"
            android:layout_margin="10dp"
            android:gravity="center"
            app:cy_cardCornerRadius="10dp"
            android:translationZ="20dp"
            android:text="ButtonCard translationZ=20dp"
            android:textSize="16sp"
           >
        </com.cy.androidview.cardview.ButtonCard>
        <com.cy.androidview.cardview.TextViewCard
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:cy_heightWidthRatio="1"
            android:layout_margin="10dp"
            android:gravity="center"
            app:cy_cardCornerRadius="6dp"
            android:text="TextViewCard cy_cardElevation=0dp"
            app:cy_cardElevation="0dp"
            android:textSize="16sp"
           >
        </com.cy.androidview.cardview.TextViewCard>
        <com.cy.androidview.cardview.ImageViewCard
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:cy_heightWidthRatio="1"
            android:src="@mipmap/ic_launcher"
            android:translationZ="10dp"
            android:layout_margin="10dp"
            app:cy_cardCornerRadius="90dp"
           >
        </com.cy.androidview.cardview.ImageViewCard>

    </LinearLayout>
</ScrollView>